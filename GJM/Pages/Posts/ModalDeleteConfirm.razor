@using GJM.Services;
<ModalHeader>
    <ModalTitle>¡Atención!</ModalTitle>
    <Button Color="Color.Secondary" Clicked="@HideModal">X</Button>
</ModalHeader>
<ModalBody>
    ¿Esta seguro de que desea borrar el post?
</ModalBody>
<ModalFooter>
    <Button Color="Color.Secondary" Clicked="@HideModal">Close</Button>
    <Button Color="Color.Danger" Clicked="@DeletePost">Borrar</Button>
</ModalFooter>

@code {

    [Inject] public IModalService ModalService { get; set; }
    [Inject] public EventService EventService { get; set; }

    private async Task HideModal()
    {
        await ModalService.Hide();
    }

    private async Task DeletePost()
    {
        EventService.PostDeleted();
        await ModalService.Hide();

    }
}
